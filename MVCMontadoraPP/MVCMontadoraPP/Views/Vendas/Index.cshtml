@model IEnumerable<MVCMontadoraPP.Models.Venda>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Vendas" asp-action="Index">
    <p>
        <b>Title: </b> <input type="text" name="SearchString" method="get">
        <input class="btn btn-dark" type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Vendedor_Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente_Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peca_Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantidade_Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorUnit_Venda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorFinal_Venda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Vendedor_Venda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente_Venda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Peca_Venda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantidade_Venda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorUnit_Venda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorFinal_Venda)
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
