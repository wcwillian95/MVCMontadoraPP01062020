                </div>
                <div class="form-group">
                    <label asp-for="ValorTotal_Compra" class="control-label"></label>
                    <input asp-for="ValorTotal_Compra" type="number" class="form-control" id="ValorTotal" value="0" />
                    <span asp-validation-for="ValorTotal_Compra" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>
