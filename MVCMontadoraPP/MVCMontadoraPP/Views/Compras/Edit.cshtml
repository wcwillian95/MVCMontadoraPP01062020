@model MVCMontadoraPP.Models.Compra

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Peca_Compra" class="control-label"></label>
                <input asp-for="Peca_Compra" class="form-control" />
                <span asp-validation-for="Peca_Compra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fornecedor_Compra" class="control-label"></label>
                <input asp-for="Fornecedor_Compra" class="form-control" />
                <span asp-validation-for="Fornecedor_Compra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantidade_Compra" class="control-label"></label>
                <input asp-for="Quantidade_Compra" class="form-control" id="Quantidade" />
                <span asp-validation-for="Quantidade_Compra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorUnitatio_Compra" class="control-label"></label>
                <input asp-for="ValorUnitatio_Compra" class="form-control" id="Valor" />
                <span asp-validation-for="ValorUnitatio_Compra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorTotal_Compra" class="control-label"></label>
                <input asp-for="ValorTotal_Compra" class="form-control" id="ValorTotal"  />
                <span asp-validation-for="ValorTotal_Compra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Calcular" onclick="Total()" class="btn btn-primary" id="Desativar" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
<script type="text/javascript">//calcular total
    function Total() {
        var s1 = document.getElementById("Valor").value;
        var s2 = document.getElementById("Quantidade").value;
        s1 = Number(s1);
        s2 = Number(s2);
        var s3 = s1 * s2;
        parseFloat(s3);
        document.getElementById("ValorTotal").value = s3;
        return document.getElementById("ValorTotal").value = s3;
    }</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
